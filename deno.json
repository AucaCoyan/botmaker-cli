{
    "tasks": {
        "check": {
            "command": "biome check --write .",
            "description": "formants and checks all files (except ignored files)"
        },
        "dev": {
            "command": "deno run --frozen --allow-read --allow-write --allow-net --watch src/main.ts",
            "dependencies": ["check"]
        },
        "compile": {
            "command": "deno compile --allow-read --allow-write --allow-net src/main.ts",
            "dependencies": ["check"]
        }
    },
    "imports": {
        "@cliffy/command": "jsr:@cliffy/command@^1.0.0-rc.7",
        "@std/assert": "jsr:@std/assert@1",
        "@std/cli": "jsr:@std/cli@^1.0.8",
        "@std/fs": "jsr:@std/fs@^1.0.6",
        "@zaubrik/djwt": "jsr:@zaubrik/djwt@^3.0.2"
    }
}
